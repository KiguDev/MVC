@model RegistrarseViewModel

<div class="card " style="margin-top:100px">
    <div class="card-content flow-text">
        <span class="card-title">Register</span>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                    <div class="input-field input-field col-sm-12">
                        <i class="material-icons prefix">email</i>
                        <input placeholder="Email" asp-for="Email" class="form-control" data-length="10" />
                    </div>
            </div>
            <div class="form-group">
                <div class="input-field col-sm-12">
                    <i class="material-icons prefix">lock</i>
                    <input placeholder="Password" type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="input-field input-field col-sm-12">
                    <i class="material-icons prefix">lock</i>
                    <input placeholder="Confirm Password" type="password" asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
            <button class="btn btn-primary red accent-3" >Submit</button>
        </form>
    </div>
    <div class="card-action">
    </div>
</div>


@section Scripts{ 
    @await Html.PartialAsync("_ValidationScriptsPartial")
}