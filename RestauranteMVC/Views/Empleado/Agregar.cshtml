@model EmpleadoViewModel
@using Restaurante.Infrastructure.Identity
    <form asp-antiforgery="true">
        <div class="form-group">
            <label class="left" asp-for="Nombre"></label>
            <input id="nombre" class="form-control" asp-for="Nombre" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="left" asp-for="Puesto"></label>
            <select id="puesto" class="left" asp-for="Puesto">
                @foreach (var puesto in Enum.GetNames(typeof(Role)))
                {
                    <option value="1">@puesto</option>
                }
            </select>
            <span asp-validation-for="Puesto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input id="id"  type="hidden" class="form-control" asp-for="Id" />
        </div>
    </form>


