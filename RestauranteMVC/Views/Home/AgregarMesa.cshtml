@model MesaViewModel
<div class="panel">
    <div class="page-header">
        @ViewData["AccionMesa"] Mesa
    </div>
    <div class="panel-body">
        <form asp-action="@ViewData["AccionMesa"]" asp-antiforgery="true">
            <div class="text-danger">
                @Html.ValidationSummary(true)
            </div>
            <div class="form-group">
                <label asp-for="Identificador"></label>
                <input class="form-control" asp-for="Identificador" />
                <span asp-validation-for="Identificador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacidad"></label>
                <input class="form-control" asp-for="Capacidad" />
                <span asp-validation-for="Capacidad" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>

@section Scripts{
    @Html.PartialAsync("_ValidationScriptsPartial")
}

