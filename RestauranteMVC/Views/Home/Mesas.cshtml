@section Scripts{
    <script>

    $(document).ready( function () {
        var table = $('#tabla-mesas-contenido').DataTable({
            ajax: {
                url: '/api/mesas/'+@ViewData["resId"],
                dataSrc : ''
            },
            columns: [
                { data: 'id', visible: false },
                { data: 'restauranteId', visible: false },
                {data:'identificador'},
                { data: 'capacidad' },
                {
                    data: '',
                    render: function (data, type, row) {
                        return '<a class="fa fa-pencil" href="@Url.Action("EditarMesa")/' + row.id + '"></a>'
                    }
                }
            ],
            select: true,
            dom: 'Bfrtip',
            buttons: [
                {
                    text: 'Agregar',
                    action: function () {
                       window.location="@Url.Action("AgregarMesa")/@ViewData["resId"]";
                    }
                },
                {
                    text: 'Eliminar',
                    action: function () {
                        bootbox.confirm("Seguro que quieres eliminar este elemento?", function (result) {
                            if (result) {
                                var rows = table.rows({ selected: true }).data();
                                console.log(rows);
                                var ids = [];
                                for (var x = 0; x < rows.length; ++x) {
                                    ids.push(rows[x].id);
                                }

                                $.ajax({
                                    type: 'DELETE',
                                    contentType: 'application/json',
                                    data: '[' + ids.toString() + ']',
                                    url: '/api/mesas/',
                                    success: function () {
                                        table.ajax.reload(null, false);
                                    }
                                });
                            }
                        });
                    }
                },

                'copy','excel','pdf'
            ]
        });

    });

    </script>
}