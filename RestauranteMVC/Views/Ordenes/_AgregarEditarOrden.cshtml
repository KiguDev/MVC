@model OrdenViewModel
<form id="Formulario">
    <div class="text-danger">
        @Html.ValidationSummary(true)
    </div>
    <div class="form-group" hidden>
        <label asp-for="Id"></label>
        <input class="form-control" asp-for="Id" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estatus"></label>
        <input class="form-control" asp-for="Estatus" />
        <span asp-validation-for="FechaDeAlta" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Total"></label>
        <input class="form-control" asp-for="Total" />
        <span asp-validation-for="Total" class="text-danger"></span>
    </div>
</form>

