@model Producto

@{
    ViewData["Title"] = "Guardar";
}

<h2>Guardar Producto</h2>

<form>
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input class="form-control" asp-for="Nombre" />
        <span asp-validation-for="Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ingredientes"></label>
        <input class="form-control" asp-for="Ingredientes" />
        <span asp-validation-for="Ingredientes"></span>
    </div>
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input class="form-control" asp-for="Precio" />
        <span asp-validation-for="Precio"></span>
    </div>
    <div class="form-group">
        <label asp-for="Imagen"></label>
        <input class="form-control" asp-for="Imagen" />
        <span asp-validation-for="Imagen"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cantidad"></label>
        <input class="form-control" asp-for="Cantidad" />
        <span asp-validation-for="Cantidad"></span>
    </div>
    <div class="form-group">
        <input id="id" type="hidden" asp-for="Id" />
    </div>
</form>

