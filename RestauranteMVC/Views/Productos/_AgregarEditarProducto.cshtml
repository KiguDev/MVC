@model ProductoViewModel
    <form id="Formulario">
        <div class="text-danger">
            @Html.ValidationSummary(true)
        </div>
        <div class="form-group" hidden>
            <label asp-for="Id"></label>
            <input class="form-control" asp-for="Id" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input class="form-control" asp-for="Nombre" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Ingredientes"></label>
            <input class="form-control" asp-for="Ingredientes" />
            <span asp-validation-for="Ingredientes" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Precio"></label>
            <input class="form-control" asp-for="Precio" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
    </form>

