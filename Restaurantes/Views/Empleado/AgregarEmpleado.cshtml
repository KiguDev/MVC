@model EmpleadoViewModel

<div>
    <div class="">
        <form asp-action="@ViewData["Accion"]" asp-antiforgery="true">
            @Html.ValidationSummary()
            <div class="text-danger">@Html.ValidationSummary(true)</div>
            <div class="form-group">
                <label asp-for="Nombre">Nombre</label>
                <input class="form-control" asp-for="Nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Puesto">Puesto</label>
                <input class="form-control" asp-for="Puesto" />
                <span asp-validation-for="Puesto" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>