@model EmpleadoViewModel
    <form id="Formulario">
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label asp-for="Nombre"> Nombre </label>
            <input class="form-control" asp-for="Nombre" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Foto"></label>
            <input class="form-control" asp-for="Foto" />
            <span asp-validation-for="Foto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Puesto"></label>
            <input class="form-control" asp-for="Puesto" />
            <span asp-validation-for="Puesto" class="text-danger"></span>
        </div>
        <input type="hidden" id="RestauranteId" value="@Model.RestauranteId" />
    </form>
