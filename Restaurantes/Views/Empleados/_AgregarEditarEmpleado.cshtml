@model EmpleadoViewModel

<input type="hidden" id="Id" asp-for="Id" value="@Model.Id"/>

<div class="text-danger">
@Html.ValidationSummary(true)
</div>
<div class="form-group">
    <label asp-for="Nombre"></label>
    <input class="form-control" asp-for="Nombre" />
    <span asp-validation-for="Nombre" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Puesto"></label>
    <input class="form-control" asp-for="Puesto" />
    <span asp-validation-for="Puesto" class="text-danger"></span>
</div>