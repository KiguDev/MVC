@model  Restaurante
<div class="card">
    <div class="card-header">
        Agregar restaurante
    </div>
    <div class="card-body">
        <form asp-action="PostAgregar">
            <div class="form-group">
                <label asp-for="Nombre"></label>
                <input class="form-control" asp-for="Nombre" />
            </div>
            <div class="form-group">
                <label for="Domicilio">Dirección</label>
                <input type="text" class="form-control" id="Domicilio" name="Domicilio" value="@Model.Domicilio" />
            </div>
            <div class="form-group">
                <label asp-for="Telefono"></label>
                <input class="form-control" asp-for="Telefono" />
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>