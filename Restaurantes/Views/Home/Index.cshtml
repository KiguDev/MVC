@model List<Restaurante>
@{
    ViewData["Title"] = "Home Page";
}

<h1>Restaurante</h1>
<a class="btn btn-primary btn-block" asp-action="Agregar">Agregar restaurante</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Domicilio</th>
            <th>Teléfono</th>
            <th>Mesas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var restaurante in Model)
        {
        <tr>
            <td>@restaurante.Nombre</td>
            <td>@restaurante.Domicilio</td>
            <td>@restaurante.Telefono</td>
            <td>@restaurante.Mesas.Count</td>
            <td><a asp-Action="Mesas" asp-route-id="@restaurante.Id">Ver mesas</a></td>
            <td><a asp-action="Editar" asp-route-id="@restaurante.Id">Editar</a></td>

            <td><form asp-action="Eliminar"><button type="submit" name="Id" value="@restaurante.Id">Eliminar</button></form></td>
        </tr>
        }
    </tbody>
</table>