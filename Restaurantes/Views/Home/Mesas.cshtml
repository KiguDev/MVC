@section Scripts{
    <script>
    $('#tabla-mesas-contenido').on('click', '.ejecutar-eliminacion', function (event) {
        event.preventDefault();
        //var id = $(this).attr('data-id');
        var id = $(this).data('id');
        //var IsConfirmed = confirm("Seguro que quieres eliminar este elemento?");

        bootbox.confirm("Seguro que quieres eliminar este elemento?", function (IsConfirmed) {
            if (IsConfirmed) {
                // eliminar elemento
                $.ajax({
                    url: '/api/mesas/' + id,
                    type: 'DELETE',
                    success: recargarElementos
                });
            }
        });
    });


    function recargarElementos() {
            // obtener elementos
            $.getJSON('/api/restaurantes/', function (data) {
                var rows = "";
                data.forEach(function (element) {
                    var row = '<tr>'
                        + '<td class="clase">' + element.Identificador
                        + '</td>'
                        + '<td><a href="@Url.Action("Mesas", "Index")/"' + element.id + '">' + element.capacidad + '</a></td>'
                        + '<td><a href="@Url.Action("Editar")/"' + element.id + '">Editar</a>'
                        + '<a href = "#" data-id="' + element.id + '" class="ejecutar-eliminacion"> Eliminar</a ></td > '
                        + '</tr>';

                    rows += row;
                });

                $('tbody').html(rows);
            });
    }

    $(document).ready( function () {
        var table = $('#tabla-mesas-contenido').DataTable({
            ajax: {
                url: '/api/mesas',
                dataSrc: '',
            },
            columns: [
                { data: 'id' },
                {data: 'identificador' },
                {data: 'capacidad' },
                {
                    data: 'mesas',
                    render: function (data, type, row) {
                        return '<a href="@Url.Action("Mesas")/' + row.id + '">' + data + '</a>'
                    },
                },
                {
                    render: function (data, type, row) {
                        return '<a class="btn btn-outline-dark" href="@Url.Action("Editar")/' + row.id + '">Editar</a>'
                    }
                }
            ],
            select: true,
            dom: 'Bfrtip',
            buttons: [
                'copy', 'excel', 'pdf',
                {
                    text: 'Eliminar',
                    action: function () {
                        var rows = table.rows({ selected: true }).data();

                        var ids = [];
                        for (var x = 0; x < rows.length; x++) {
                            ids.push(rows[x].id);
                        }

                         $.ajax({
                             url: '/api/mesas',
                             data: '[' + ids.toString() + ']',
                             contentType: 'application/json',
                            type: 'DELETE',
                             success: function () {
                                 table.ajax.reload();
                             }
                         });

                        console.log(ids);
                    }
                }
            ]
        });

    //    table.buttons().container()
    //.appendTo( $('.col-sm-6:eq(0)', table.table().container() ) );

    } );
    </script>
}


