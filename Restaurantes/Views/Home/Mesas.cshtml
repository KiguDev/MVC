@model List<Mesa>
@{ 

}
@{
    ViewData["Title"] = "Mesas";
}
<h1>Mesas</h1>
<a class="btn btn-primary btn-block" asp-route-id="@ViewData["restauranteId"]" asp-action="AgregarMesa">Agregar mesa</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Identificador</th>
            <th>Capacidad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mesa in Model)
        {
        <tr>
            <td>@mesa.Identificador</td>
            <td>@mesa.Capacidad</td>
            <td><a asp-action="EditarMesa" asp-route-id="@mesa.Id">Editar</a></td>

            <td><form asp-action="EliminarMesa"><button type="submit" name="Id" value="@mesa.Id">Eliminar</button></form></td>
        </tr>
        }
    </tbody>
</table>


