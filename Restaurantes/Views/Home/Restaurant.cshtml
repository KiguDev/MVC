@model Restaurante



<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
    <div class="row">
        <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
            <div class="well profile">
                <div class="col-sm-12">
                    <div class="col-xs-12 col-sm-8">
                        <p>
                            <span class="tags"> LLámanos!</span> @Model.Telefono
                        </p>
                        <p>
                            <strong>Cerramos a las</strong> @Model.HoraDeCierre
                        </p>
                        <p>
                            <strong>Visita nuestra página</strong> @Model.PaginaWeb
                        </p>
                        <p>
                            <strong>Visítanos en</strong> @Model.Domicilio
                        </p>
                    </div>
                    <div class="col-xs-12 col-sm-1 text-left">
                        <figure>
                            <img src="@Model.Logo" alt="" class="img-circle" height="125" width="125">
                            <figcaption class="ratings">
                                <p>
                                </p>
                            </figcaption>
                        </figure>
                    </div>
                </div>
                <div class="col-xs-12 divider text-center">
                    <div class="col-xs-12 col-sm-4 emphasis">
                        <h2><strong>@Model.Mesas.Count()</strong></h2>
                        <p><small>Mesas</small></p>
                        <button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span>Mesa </button>
                    </div>
                    <div class="col-xs-12 col-sm-4 emphasis">
                        <h2><strong>@Model.Empleados.Count()</strong></h2>
                        <p><small>Empleados</small></p>
                        <button class="btn btn-info btn-block"><span class="fa fa-user"></span>Empleado</button>
                    </div>
                    <div class="col-xs-12 col-sm-4 emphasis">
                        <h2><strong>@Model.Productos.Count()</strong></h2>
                        <p><small>Productos</small></p>
                        <div class="btn-group dropup btn-block">
                            <button type="button" class="btn btn-primary"><span class="fa fa-gear"></span> Editar </button>
                            <ul class="dropdown-menu text-left" role="menu">
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



