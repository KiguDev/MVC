@model ProductoViewModel
<input type="hidden" id="Id" asp-for="Id" value="@Model.Id" />
@Html.ValidationSummary(true)
<div class="form-group">
    <label asp-for="Nombre"></label>
    <input class="form-control" asp-for="Nombre" />
    <span asp-validation-for="Nombre" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Precio"></label>
    <input class="form-control" asp-for="Precio" />
    <span asp-validation-for="Precio" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Imagen"></label>
    <input class="form-control" asp-for="Imagen" />
    <span asp-validation-for="Imagen" class="text-danger"></span>
</div>
